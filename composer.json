{
    "name": "shlinkio/shlink-test-utils",
    "type": "project",
    "homepage": "https://shlink.io",
    "description": "Testing utils for Shlink",
    "license": "MIT",
    "authors": [
        {
            "name": "Alejandro Celaya Alastru√©",
            "homepage": "https://www.alejandrocelaya.com",
            "email": "alejandro@alejandrocelaya.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "ext-json": "*",
        "doctrine/data-fixtures": "^1.5",
        "doctrine/orm": "^2.14",
        "fig/http-message-util": "^1.1",
        "guzzlehttp/guzzle": "^7.5",
        "phpunit/phpunit": "^10.0",
        "symfony/process": "^6.2"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.9",
        "roave/security-advisories": "dev-master",
        "shlinkio/php-coding-standard": "~2.3.0"
    },
    "autoload": {
        "psr-4": {
            "Shlinkio\\Shlink\\TestUtils\\": "src"
        }
    },
    "scripts": {
        "ci": [
            "@cs",
            "@stan"
        ],
        "cs": "phpcs",
        "cs:fix": "phpcbf",
        "stan": "phpstan analyse src --level=8"
    },
    "scripts-descriptions": {
        "ci": "<fg=blue;options=bold>Alias for \"cs\" and \"stan\"</>",
        "cs": "<fg=blue;options=bold>Checks coding styles</>",
        "cs:fix": "<fg=blue;options=bold>Fixes coding styles, when possible</>",
        "stan": "<fg=blue;options=bold>Inspects code with phpstan</>"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "composer/package-versions-deprecated": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
